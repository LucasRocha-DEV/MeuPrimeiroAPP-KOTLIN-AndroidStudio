<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/PRIMEIROTEXTO"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:background="#805DB5"
            android:text="@string/titulo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/LinkGit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:text="@string/visite_github"
            app:layout_constraintStart_toStartOf="@+id/PRIMEIROTEXTO"
            app:layout_constraintTop_toBottomOf="@+id/PRIMEIROTEXTO" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:backgroundTint="#4CAF50"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="@string/visite_github"
            app:layout_constraintStart_toStartOf="@+id/LinkGit"
            app:layout_constraintTop_toBottomOf="@+id/LinkGit" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>